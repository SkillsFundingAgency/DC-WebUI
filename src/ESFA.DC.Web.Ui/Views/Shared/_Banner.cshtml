@using DC.Web.Ui.Extensions
  <div class="govuk-phase-banner">
    <p class="govuk-phase-banner__content">
        <strong class="govuk-tag govuk-phase-banner__content__tag">BETA</strong>
        <span class="govuk-phase-banner__text">This is a new service – your <a href="https://www.smartsurvey.co.uk/s/dct-beta-feedback/" target="_blank">feedback</a> will help us to improve it.</span>
    </p>
</div>
@if (@User.Identity.IsAuthenticated)
{
    <div class="govuk-body account-info">
        <div>
            <span class="your-name" id="bannerUserName">
                @User.Name()
                @if (User.Ukprn() > 0)
                {
                    <text> UKPRN:@User.Ukprn() </text>
                }
            </span>
            <a class="account-link" asp-controller="Account" asp-action="SignOut">Sign out</a>
        </div>
    </div>
}
@if (ViewBag.PageId != "home-page" && @ViewData.ContainsKey("BackUrl"))
{
    <a href="@ViewData["BackUrl"]" class="govuk-back-link">Back</a>
}