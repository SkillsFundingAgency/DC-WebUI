
@using DC.Web.Ui.Settings.Models
@using Microsoft.ApplicationInsights.AspNetCore
@inject GoogleTrackingSettings TrackingSettings

<meta charset="utf-8" />
<title>@ViewData["Title"]</title>

<!-- Global site tag (gtag.js) - Google Analytics -->
