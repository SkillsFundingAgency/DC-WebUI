@model string

<div class="govuk-grid-row">

    <div class="govuk-grid-column-two-thirds">
        @Html.ActionLink("Back to search results", "Index", "ProviderSearch", new { area="helpdesk", searchTerm = Model } , new {@class = "govuk-back-link"})
    </div>

    <form asp-controller="ProviderSearch" asp-area="helpdesk"  asp-action="GetResults" method="post" id="form">

        <div class="govuk-grid-column-one-third">

            <label class="govuk-label govuk-!-width-two-thirds govuk-visually-hidden" for="searchTerm">
                Search for a provider
            </label>
            <div class="mt15">
                <input class="govuk-input govuk-!-width-two-thirds" id="searchTerm" name="searchTerm" type="search" value="" aria-describedby="provider-search" placeholder="Name, UKPRN or UPIN">
                <button type="submit" class="govuk-button">
                    Search
                </button>
            </div>
        </div>
    </form>
</div>
